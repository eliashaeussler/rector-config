{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"local>eliashaeussler/renovate-config"
	],
	"composerIgnorePlatformReqs": [
		"ext-intl"
	],
	"constraints": {
		"php": "8.1.*"
	},
	"packageRules": [
		{
			"enabled": false,
			"matchCurrentVersion": "8.1",
			"matchDatasources": [
				"github-tags"
			],
			"matchDepNames": [
				"php"
			],
			"matchFileNames": [
				".github/workflows/cgl.yaml"
			]
		}
	]
}
